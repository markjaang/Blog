        <link href="~/Content/webcss/animate.css" rel="stylesheet" />
        <link href="~/Content/webcss/animate.min.css" rel="stylesheet" />
        <link href="~/Content/webcss/style.css" rel="stylesheet" />
        <link href="~/Content/webcss/normalize.css" rel="stylesheet" />
