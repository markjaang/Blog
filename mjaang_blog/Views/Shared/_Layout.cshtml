    <style>
        ul.ui-autocomplete {
                                z-index: 1100;
                                background: rgba(255,0,0,0);
                                border:none;
                                position:fixed
                            }
        li.ui-menu-item:hover{
            font-weight:900;
            background: rgba(255,0,0,0);
            border:none;
